<h2>Listing Breaks</h2>

<table class="table">
  <thead>
    <tr>
      <th>Served</th>
      <th>Stoped</th>
      <th>Started</th>
      <th>Fixed</th>
      <th>Notes</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for break <- @breaks do %>
    <tr>
      <td><%= break.served %></td>
      <td><%= break.stoped %></td>
      <td><%= break.started %></td>
      <td><%= break.fixed %></td>
      <td><%= break.notes %></td>

      <td class="text-right">
        <span><%= link "Show", to: address_break_path(@conn, :show, @address.id, break), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: address_break_path(@conn, :edit, @address.id, break), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: address_break_path(@conn, :delete, @address.id, break), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Break", to: address_break_path(@conn, :new, @address.id) %></span>
